    <% if(typeof alert != "undefined"){ %>
      <script>
        Swal.fire({
          title: '<%= alertTitle %>',
          text: '<%= alertMessage %>',
          icon: '<%= alertIcon %>',
          background: '<%= background %>',
          showConfirmButton: <%= showConfirmButton %>,
          timer: <%= timer %>
        }).then(() => {
          <% if (ruta !== "noautorizado") { %>
            window.location = '<%= ruta %>';
          <% } %>
        })
      </script>
    <% } %>

