          <i class="fa fa-solid fa-moon luna"></i>
          <i class="fa fa-solid fa-sun oculto sol"></i>
      </div>
    </div>

    <div class="container d-flex row justify-content-center container-cards">
      <div class="card1 card-login card-form">
        <div class="d-flex justify-content-center">
            <h2 class="login-text">Login</h2>
        </div>

        <form id="login" action="/login" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label width fs-2">Email</label>
                <input type="email" class="form-control" id="email" name="email" aria-describedby="emailHelp">
                <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label fs-2">Password</label>
                <input type="password" class="form-control" id="pass" name="pass">
            </div>
            <button type="submit" class="btn btn-primary fs-3 mt-5">Login</button>
            <br>
            <a href="/register" type="button" class="btn btn-primary fs-3 bg-success" style="padding: 1rem 0;">Registrate</a>
        <form>

      </div>
