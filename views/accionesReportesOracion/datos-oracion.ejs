<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="expires" content="0">
  <meta http-equiv="pragma" content="no-cache">
  <meta http-equiv="cache-control" content="no-cache, no-store, must-revalidate">
  <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/resources/css/tailwind.min.css">
  <link rel="stylesheet" href="/resources/fontawesome-free-6.1.2-web/css/all.min.css">
  <link rel="stylesheet" href="/resources/css/style.css">
</head>
<body class="min-h-100 body-lista">

  <div class="icono">
    <p >Genera tus reportes <i class="fa-regular fa-face-smile"></i></p>
  </div>

  <section class="navegacion">
    <nav class="navbar navbar-expand-lg">
      <div class="container-fluid">
        <img class="arimg" src="/resources/img/arministries.png" alt="">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a class="nav-link home" aria-current="page" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link dashboard" href="#">Dashboard</a>
            </li>
            <li class="nav-item dropdown">
              <a class="nav-link dropdown-toggle" id="reportesDrop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                Reportes
              </a>
              <ul class="dropdown-menu">
                <li><a class="dropdown-item" href="/">Reporte Encuentro</a></li>
                <li><a class="dropdown-item" href="/reporteOracion">Reporte Oración</a></li>
                <li><a class="dropdown-item" href="/vistasReportes">Resumen Encuentros</a></li>
                <li><a class="dropdown-item" href="/vistasOracion">Resumen Encuentro Oración</a></li>
                <li><hr class="dropdown-divider"></li>
                <!-- <li><a class="dropdown-item" href="#">Something else here</a></li> -->
              </ul>
            </li>
            <li class="nav-item">
              <% if (user) { %>
              <a class="nav-link font-black usuario text-white" aria-disabled="true">Conectado: <%= user.user %></a>
              <% } %>
            </li>
          </ul>
          <form class="d-flex" role="search">
            <a class="btn btn-outline-danger" href="/logout">Cerrar Sesión</a>
          </form>
        </div>
      </div>
    </nav>
  </section>

  <div class="dark-light-mode_button switch no-print fixed-top">
    <div class="button__shadow">
        <i class="fa fa-solid fa-moon luna"></i>
        <i class="fa fa-solid fa-sun oculto sol"></i>
    </div>
  </div>
  
  <% if (encuentro) { %>
  <main class="mt-10">
      <div class="fondo"></div>
      <div class="fondo fondo2"></div>
      <div class="fondo fondo3"></div>
    <div class="flex flex-col container" style="max-width: 90%; font-size: 12px;">
        <div class="align-middle inline-block shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
          <div class="card1 text-sm" id="contenedor-reporte">
            <div class="card-header d-flex justify-content-between no-print">
              <strong class="ministries">ar ministries</strong>
              <button class="btn btn-success no-print btn-descargar" onclick="print_canvas()">Descargar</button>
            </div>
          
            <div class="card-body" id="contenido" style="max-width: 99%";>
          
            <div class="w-100 d-flex row flex-row-reverse align-content-between" style="margin-top: 10px; text-align: right !important; font-size:12px;">
              <h1 class="w-50 rep">Encuentro Oración</h1>
              <img class="arimg" src="/resources/img/arministries.png" style="position: absolute; left:0 ; margin-top: 5px; width: 15rem; ">
            </div>
            <div class="d-flex justify-content-around" style="margin-top: 20px;">
              <div>
                <span><b>Fecha y Hora</b></span>
                <br>
                <span><%= encuentro.fecha %>/</span>
                <span><%= encuentro.hora %></span>
              </div>
              <div>
                <span><b>Modalidad</b></span>
                <br>
                <span class="text-capitalize"><%= encuentro.modalidad %></span>
              </div>
              <div>
                <span><b>Campus</b></span>
                <br>
                <span class="text-capitalize"><%= encuentro.campus %></span>
              </div>
              <div>
                <span><b>Lideres de voluntarios</b></span>
                <br>
                <span class="text-capitalize"><%= encuentro.lideres_voluntarios %></span>
              </div>
              <div>
                <span><b>Ministros Encargados</b></span>
                <br>
                <span class="pastores text-capitalize"><%= encuentro.ministros_encargados %></span>
              </div>
            </div>

            <br>
          
          <h4 class="encabezado"; margin-top: 20px;">Asistencia</h4>
              
              <table class="table table-bordered table-striped table-bordered-all">
                <thead>
                  <th>Adultos</th>
                </thead>
                <tbody>
                  <tr>
                    <td><%= encuentro.adultos %></td>
                  </tr>
                </tbody>
              </table>
              
              <br>
          
              <h4 class="encabezado"">Voluntarios</h4>
              
              <table class="table table-bordered table-striped table-bordered-all">
                <thead>
                  <th>Servcio</th>
                  <th>Técnica</th>
                  <th>Worhsip</th>
                  <th>Cocina</th>
                  <th>Redes Sociales</th>
                  <th>Seguridad</th>
                </thead>
                <tbody>
                  <tr>
                    <td><%= encuentro.servicio_voluntarios %></td>
                    <td><%= encuentro.tecnica_voluntarios %></td>
                    <td><%= encuentro.worship_voluntarios %></td>
                    <td><%= encuentro.cocina_voluntarios %></td>
                    <td><%= encuentro.redes_sociales_voluntarios %></td>
                    <td><%= encuentro.seguridad_voluntarios %></td>
                  </tr>
                </tbody>
              </table>
          
              <br>
             
              <table class="table table-bordered table-striped table-bordered-all">
                <thead>
                  <th>Total de asistentes Presencial</th>
                </thead>
                <tbody>
                  <tr>
                    <td><%= encuentro.total_asistentes %></td>
                  </tr>
                </tbody>
              </table>
          
              <br>

              <h4 class="encabezado">Asistencia Online</h4>

              <table class="table table-bordered table-striped table-bordered-all">
                <thead>
                  <th>Youtube</th>
                </thead>
                <tbody>
                  <tr>
                    <td><%= encuentro.asistencia_online %></td>
                  </tr>
                </tbody>
              </table>

              <table class="table table-bordered table-striped table-bordered-all">
                <thead>
                  <th>Total de asistentes Online</th>
                </thead>
                <tbody>
                  <tr>
                    <td><%= encuentro.total_asistentes_online %></td>
                  </tr>
                </tbody>
              </table>
          
              <br>
          
                <table class="table table-bordered table-striped table-bordered-all">
                  <thead>
                    <th>ID Reporte</th>
                  </thead>
                  <tbody>
                    <tr>
                      <td><%= encuentro.id %></td>
                    </tr>
                  </tbody>
                </table>
                <h4 class="encabezado"></h4>
              </div>
          </div>
        </div>
    </div>
  </main>
  <% } %>


  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/html2pdf.js/0.10.1/html2pdf.bundle.min.js"></script>
  <script src="/resources/js/modal.js"></script>
  <script src="/resources/js/darkMode.js"></script>


  <script>
function print_canvas() {
    const element = document.getElementById('contenido');
    html2pdf().set({
        margin: [5, 10, 5, 10],
        filename: `ReporteEncuentro.pdf`,
        image: { type: 'jpeg', quality: 0.98 },
        html2canvas: { scale: 2 },
        jsPdf: { unit: 'mm', format: 'a4', orientation: 'portrait' }
    }).from(element).save().toPdf().catch(error => console.log(error));


    const div = document.createElement('div')
    div.innerHTML = `<div class="w-100 d-flex row flex-row-reverse align-content-between" style="margin-top: 10px; text-align: right !important; font-size:12px;">
              <h1 class="w-50 rep">Reporte Encuentro</h1>
              <img class="arimg" src="/resources/img/arministries.png" style="position: absolute; left:0 ; margin-top: 5px; width: 15rem; ">
            </div>`

    const saltoDePagina = document.querySelector('#salto-de-pagina')
    saltoDePagina.appendChild(div)


    setTimeout(() => {
      div.remove()
    }, 3000);
}
  </script>

</body>
</html>
