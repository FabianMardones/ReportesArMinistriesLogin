                    <div class="col-6">
                      <input type="number" class="form-control form-control-lg mb-3 fs-6" placeholder="Total que aceptó a Jesús" aria-label="totalAJ" id="totalAJ" name="totalAJ" value="<%= results.total_acepta_a_jesus %>">
