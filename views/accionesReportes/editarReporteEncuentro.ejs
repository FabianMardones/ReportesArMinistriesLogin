                  <% ministrosEncargados.forEach((ministros) => { %>
                    <option value="<%= ministros.nombre_ministro %> & <%= ministros.nombre_ministra %>"><%= ministros.nombre_ministro %> & <%= ministros.nombre_ministra %></option>
