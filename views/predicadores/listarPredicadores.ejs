  <div class="dark-light-mode_button switch no-print fixed-top">
    <div class="button__shadow">
        <i class="fa fa-solid fa-moon luna"></i>
        <i class="fa fa-solid fa-sun oculto sol"></i>
    </div>
  </div>

  
  <main class="container vista-pastores admin">
      <div class="fondo"></div>
      <div class="fondo fondo2"></div>
      <div class="fondo fondo3"></div>

        <button class="btn btn-outline-white mt-4 fs-2" disabled><i class="fa-solid fa-circle-plus bx-md"></i></button>

      <div class="flex flex-col mt-2">
        <div class="py-2 overflow-x-auto">
          <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
            <table class="min-w-full">
                <thead class="bg-gray-100 encabezado-listado">
                    <tr>
                        <th class="px-6 py-3 border-b border-gray-200  text-left text-xs leading-4 font-medium text-gray-600 uppercase tracking-wider">
                                Rol
                        </th>
                        <th class="px-6 py-3 border-b border-gray-200  text-left text-xs leading-4 font-medium text-gray-600 uppercase tracking-wider">
                                Nombre Pastor/a
                        </th>
                    </tr>
                </thead>
                <% results.forEach((predicadores)=> { %>
                <tbody id="listado-encuentros" class="cuerpo-listado">
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <p class="text-sm leading-5 font-medium text-lg font-bold campus"><%= predicadores.rol %></p>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 fecha">
                    <p class="text-sm leading-5 font-medium text-lg font-bold campus"><%= predicadores.nombre_pastor %> <%= predicadores.apellido_pastor %></p>
                  </td>
                </tbody>
                <% }) %>
            </table>
          </div>
        </div>
      </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
