                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/dashboard">Salir</a></li>
              </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" id="reportesDrop" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              Predicadores
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/predicadores/listarPredicadores">Predicadores</a></li>
              <li><hr class="dropdown-divider"></li>
