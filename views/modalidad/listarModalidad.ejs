  <div class="dark-light-mode_button switch no-print fixed-top">
    <div class="button__shadow">
        <i class="fa fa-solid fa-moon luna"></i>
        <i class="fa fa-solid fa-sun oculto sol"></i>
    </div>
  </div>

  
  <main class="container vista-pastores admin">
      <div class="fondo"></div>
      <div class="fondo fondo2"></div>
      <div class="fondo fondo3"></div>

        <a href="/modalidad/nuevaModalidad" class="btn btn-outline-primary mt-4 fs-2"><i class="fa-solid fa-circle-plus bx-md"></i></a>

      <div class="flex flex-col mt-2">
        <div class="py-2 overflow-x-auto">
          <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
            <table class="min-w-full">
                <thead class="bg-gray-100 encabezado-listado">
                    <tr>
                        <th class="px-6 py-3 border-b border-gray-200  text-left text-xs leading-4 font-medium text-gray-600 uppercase tracking-wider">
                              Modalidad
                        </th>
                        <th class="px-6 py-3 border-b border-gray-200  text-left text-xs leading-4 font-medium text-gray-600 uppercase tracking-wider">
                                Acciones
                        </th>
                    </tr>
                </thead>
                <% results.forEach((modalidad) => {  %>
                <tbody id="listado-encuentros" class="cuerpo-listado">
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                    <p class="text-sm leading-5 font-medium text-lg font-bold campus"><%= modalidad.modalidad %></p>
                  </td>
                  <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5">
                    <a href="/editModalidad/<%= modalidad.id_modalidad %>" class="btn btn-outline-warning font-black editar">Editar
                    </a>
                    <button class="btn btn-outline-danger font-black" onclick="confirmarEliminarCA('<%= modalidad.id_modalidad %>')">Eliminar</button>
                  </td>
                </tbody>
                <% }) %>
            </table>
          </div>
        </div>
      </div>

  </main>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="/resources/js/darkMode.js"></script>
  <script>
    function confirmarEliminarCA(id) {
        Swal.fire({
            title: '¿Estás seguro?',
            text: 'Esta acción eliminará al pastor. ¿Estás seguro de continuar?',
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Sí, eliminar',
            cancelButtonText: 'Cancelar'
        }).then((result) => {
            if (result.isConfirmed) {
                window.location.href = '/deleteModalidad/' + id;
            }
        });
    }
</script>
</body>
</html>
