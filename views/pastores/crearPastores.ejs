      <form id="formulario2" class="formularioForm" action="/savePastores" method="post">
        <div class="title__form">
            <h2 class="fs-1 text-center mb-4">Añadir <strong>Pastor</strong></h2>
        </div>
        <div class="mb-1">
            <h3>Rol</h3>
            <select class="form-select form-select-lg fs-6 rol" id="rol" name="rol">
